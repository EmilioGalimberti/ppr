% Sala

funciones(fun1, ob1, fecha(18, 05, 2022), hora(18, 00), 1).
funciones(fun2, ob1, fecha(18, 05, 2022), hora(22, 00), 1).
funciones(fun3, ob2, fecha(18, 05, 2022), hora(16, 30), 2).
