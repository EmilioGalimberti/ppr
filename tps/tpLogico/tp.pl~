).
entradas(en8, fun2, 500, si, platea(55)).
entradas(en9, fun2, 500, si, platea(59)).
entradas(en10, fun2, 300, no, vip('A', si)
).
entradas(en11, fun2, 700, si, vip('F', no)).
entradas(en12, fun3, 500, si, platea(99)).
